{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "$metadata": {
    "uris": {
      "jsonLdContext": "https://raw.githubusercontent.com/Veerabala10/claim-schema-vocab/refs/heads/main/schemas/json-ld/professional-v1.json-ld",
      "jsonSchema": "https://raw.githubusercontent.com/Veerabala10/claim-schema-vocab/refs/heads/main/schemas/json/ProfessionalCredential-v1.json"
    }
  },
  "required": [
    "@context",
    "id",
    "type",
    "issuanceDate",
    "credentialSubject",
    "credentialSchema",
    "credentialStatus",
    "issuer"
  ],
  "properties": {
    "@context": {
      "type": ["string", "array", "object"]
    },
    "id": {
      "type": "string"
    },
    "type": {
      "type": ["string", "array"],
      "items": {
        "type": "string"
      }
    },
    "issuer": {
      "type": ["string", "object"],
      "format": "uri",
      "required": ["id"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        }
      }
    },
    "issuanceDate": {
      "type": "string",
      "format": "date-time"
    },
    "expirationDate": {
      "type": "string",
      "format": "date-time"
    },
    "credentialStatus": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "credentialSchema": {
      "type": "object",
      "required": ["id", "type"],
      "properties": {
        "id": {
          "type": "string",
          "format": "uri"
        },
        "type": {
          "type": "string"
        }
      }
    },
    "subjectPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "merklizationRootPosition": {
      "type": "string",
      "enum": ["none", "index", "value"]
    },
    "revNonce": {
      "type": "integer"
    },
    "version": {
      "type": "integer"
    },
    "updatable": {
      "type": "boolean"
    },
    "credentialSubject": {
      "type": "object",
      "required": [
        "id",
        "fullName",
        "jobTitle",
        "certificationNumber",
        "issuingAuthorityBoard",
        "yearsOfExperience",
        "fieldIndustryExpertise",
        "documentType"
      ],
      "properties": {
        "id": {
          "title": "Credential Subject ID",
          "type": "string",
          "format": "uri"
        },
        "fullName": {
          "type": "string"
        },
        "jobTitle": {
          "type": "string"
        },
        "certificationNumber": {
          "type": "string"
        },
        "issuingAuthorityBoard": {
          "type": "string"
        },
        "yearsOfExperience": {
          "type": "integer",
          "minimum": 0
        },
        "fieldIndustryExpertise": {
          "type": "string"
        },
        "linkedinProfile": {
          "type": "string",
          "format": "uri"
        },
        "contactNumberOfWork": {
          "type": "string"
        },
        "emailAddressOfWork": {
          "type": "string",
          "format": "email"
        },
        "documentURI": {
          "type": "string",
          "format": "uri"
        },
        "documentType": {
          "type": "integer"
        }
      }
    }
  }
}
